function [reRed, reGreen, reBlue] = reshapeFun(images)

numPixels = size(images{1},1)*size(images{1},2);


for i=1:size(images{1},2)
    image = images{i};
    
    reRed{i} = reshape(image(:,:,1), [numPixels,1]);
    reGreen{i} = reshape(image(:,:,2), [numPixels,1]);
    reBlue{i} = reshape(image(:,:,3), [numPixels,1]);
     
    
end


Rcell = [reReR(:,1:nrOfImages)];
Gcell = [reshapedImageG(:,1:nrOfImages)];
Bcell = [reshapedImageB(:,1:nrOfImages)];
R = cell2mat(Rcell);
G = cell2mat(Gcell);
B = cell2mat(Bcell);
end

